\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\hat{\sigma}=\sqrt{\beta\frac{2\theta}{1-\alpha^{2}}}\label{eq:OU-est-volatility}
\end{equation}

\end_inset


\end_layout

